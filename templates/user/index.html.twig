{% extends 'base.html.twig' %}

{% block title %}Compte | {{ app.user.name }}{% endblock %}

{% block body %}
    <section style="background-image: linear-gradient(rgba(0,0,0,0.75), rgba(0,0,0,0.75)), url('https://static-pepper.dealabs.com/users/raw/default/1027447_1/re/1024w/cp/1024x1024/bl/10/qt/40/1027447_1.jpg'); background-size: cover;">
        <div class="container py-3">
            <div class="d-flex flex-row">
                <div class="brand-avatar-container me-3">
                    <img class="rounded-circle avatar-xl"
                            src="https://static-pepper.dealabs.com/users/raw/default/1027447_1/re/240x240/qt/45/1027447_1.jpg">
                </div>
                <div class="brand-info-container my-2  d-flex flex-column justify-content-center">
                    <h5 class="text-white text-m text-fit">{{ app.user.name }}</h5>
                    <p class="text-muted text-xs">Inscrit(e) depuis le 19 novembre 2018</p>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-white">
        <nav class="nav container text-decoration-none">
            <a class="nav-link nav-active text-black-50 text-strong text-s" aria-current="page" href="{{ path('app_user') }}">Aperçu</a>
            <a class="nav-link text-black-50 text-strong text-s" href="{{ path('app_user_deals') }}">Deals ({{ app.user.deals.count }})</a>
            <a class="nav-link text-black-50 text-strong text-s" href="#">Deals enregistrés (0)</a>
        </nav>
    </section>
{% endblock %}
