{% extends 'base.html.twig' %}

{% block title %}Enregistrer{% endblock %}

{% block body %}
    <div class="bg-white container d-flex flex-column p-5 rounded-2 my-5 align-content-around">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal">Enregistrer</h1>

        {{ form_start(registrationForm) }}
            {{ form_label(registrationForm.name, 'Pseudo') }}
            {{ form_widget(registrationForm.name, {'attr': {'class': 'mb-3 form-control' } }) }}
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mb-3 form-control' } }) }}
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mb-3 form-control' } }) }}
            <div class="col-lg-12">
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions') }}
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mb-3' } }) }}
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
