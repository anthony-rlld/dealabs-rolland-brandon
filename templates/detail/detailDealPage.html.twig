{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="card mb-3 col-lg-12 mt-2">
        <div class="row g-0">
            <div class="col-md-2">
                <img src="{{ asset('/assets/images/crossimg.png') }}" alt="">
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <h5 class="card-title">{{ deal.title }}</h5>
                    {% if deal.actualPrice is defined %}
                        <p class="card-text"><span class="text-danger fw-bold">{{ deal.newPrice }}</span> / <strike class="text-secondary ">{{ deal.actualPrice }}</strike></p>
                    {% endif %}
                    {% if deal.reductionType is defined %}
                        <p class="card-text"><span class="text-danger fw-bold">{{ deal.reductionType }}</span></p>
                    {% endif %}
                    <p class="card-text">{{ deal.description }}</p>
                    <p class="card-text"><small class="text-muted">ajout√© le {{ deal.creationDate|date("d/m/Y")}}</small></p>
                    <a href="{{ path('detaildeal',{'id': deal.id}) }}" class="btn btn-primary">Voir le deal</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <h3>Listes des commentaires du deal</h3>
</div>

{% endblock %}
