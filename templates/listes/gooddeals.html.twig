{% extends 'base.html.twig' %}

{% block title %}Hello GoodDealController!{% endblock %}

{% block body %}
<div class="container card-deck flex-row mt-5">
    {% for gd in goodDeals %}
        <div class="card mb-3 col-lg-12">
            <div class="row g-0">
                <div class="col-md-2">
                    <img src="{{ asset('crossimg.png') }}" alt="">
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title">{{ gd.title }}</h5>
                        <p class="card-text">{{ gd.actualPrice }} / {{ gd.newPrice }}</p>
                        <p class="card-text">{{ gd.description }}</p>
                        <p class="card-text"><small class="text-muted">{{ gd.creationDate|date('Y-m-d') }}</small></p>
                        <a href="{{ path('app_dealdetail', {'id': gd.id }) }}" class="btn btn-primary">Voir le deal</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
